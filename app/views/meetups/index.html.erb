<h1>Plan a run</h1>

<table>
  <thead>
    <tr>
      <th>Location name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetups.each do |meetup| %>
      <tr>
        <td><%= meetup.name %></td>
        <td><%= meetup.latitude %></td>
        <td><%= meetup.longitude %></td>
        <td><%= link_to 'Show', meetup %></td>
        <td><%= link_to 'Edit', edit_meetup_path(meetup) %></td>
        <td><%= link_to 'Delete', meetup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

    <%= render 'form', meetup: @meetup %>

    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'>
        <script type="text/javascript">
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers([
            {
              "lat": 51.51284874525074,
              "lng": -0.1573314555616207,
              "picture": {
                "width":  32,
                "height": 32
              },
              "infowindow": "SJSU"
            }
          ]);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
        </script>
      </div>
    </div>
  </tbody>
</table>
<br>


